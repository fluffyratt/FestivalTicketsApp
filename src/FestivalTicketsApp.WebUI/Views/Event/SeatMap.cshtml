@model int

@{
    ViewData["Title"] = "Choose a seat";
}

<div class="container mt-4">
    <h1 class="mb-4">Choose a seat</h1>

    <div id="seat-map-container">
        <partial name="PlanePartials/_SeatMap" />

        <div id="seat-info" class="mt-4" style="display:none;">
            <div class="p-3 border rounded bg-light" style="width: 300px;">
                <h4>Selected seat</h4>
                <p id="si-row"></p>
                <p id="si-seat"></p>
                <p id="si-price"></p>

                <button id="add-to-cart" class="btn btn-primary w-100 mt-3">
                    Add to cart
                </button>
            </div>
        </div>

        <div id="cart" class="mt-4" style="display:none;">
            <div class="p-3 border rounded bg-white" style="width: 350px;">
                <h4>Cart</h4>
                <ul id="cart-items"></ul>
                <hr />
                <h5>Total: <span id="cart-total">0</span>$</h5>
                <button class="btn btn-success w-100 mt-3">Checkout</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/seat-map.js"></script>

    <script>
        loadSeatMap(@Model);
    </script>
}
