@model FestivalTicketsApp.WebUI.Models.Event.EventDetailsViewModel

<div class="container h-100 d-flex flex-column">
    <div class="row mt-2">
        <div class="col-auto">
            <h1 class="fw-bold">@Model.Event.Title</h1>
        </div>
        <div class="col-2 my-auto">
        @if (User.Identity.IsAuthenticated)
        {
            <partial name="DetailsPartials/FavouritePart" 
                     model="@(new FavouritePartViewModel 
                            { 
                                EventId = int.Parse(ViewContext.RouteData.Values["id"].ToString()), 
                                IsInFavourite = Model.IsInFavourite ?? false
                            })"/>
        }
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-8">                
            <partial name="DetailsPartials/DescriptionPart" model="Model.Event"/>
        </div>
        
        <div class="col-4">                
            <partial name="DetailsPartials/DetailsPart" model="Model.Event"/>
        </div>
    </div>
    <partial name="SameHostEventsPart" model="Model.HostedEvents"/>
</div>
