@model List<FestivalTicketsApp.Application.HostService.DTO.HostTypeDto>

@{
    string currentUrl = Context.Request.Path + Context.Request.QueryString;
}

<ul class="navbar-nav flex-grow-1">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link">Hello @User.FindFirst("given_name").Value!</a>
        </li>
        @if (User.IsInRole(UserRolesConstants.Client))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Client" asp-action="Favourite">Your favourites</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Client" asp-action="Tickets">Your tickets</a>
            </li>
        }
        <li class="nav-item border-bottom">
            <form id="logoutForm" class="form-inline d-flex justify-content-center" asp-controller="Home" asp-action="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item border-bottom">
            <a class="nav-link " id="login" asp-controller="Home" asp-action="Login" asp-route-returnUrl="@currentUrl">Login</a>
        </li>
    }
    
    @{
        foreach (var hostType in Model)
        {
            <li class="nav-item">
                <a class="nav-link " asp-area="" asp-controller="Host" asp-action="List" asp-route-id="@hostType.Id">@hostType.Name</a>
            </li>
        }
    }
</ul>
