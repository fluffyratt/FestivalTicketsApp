@{
    var title = ViewBag.Title ?? "FestivalTicketApp";
}

@inject IOptions<PublicKeysOptions> PublicKeys;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cinema-theme.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/plentz/jquery-maskmoney@master/dist/jquery.maskMoney.min.js" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/@(PublicKeys.Value.FontAwesomeKey).js" crossorigin="anonymous"></script>
</head>
<body class="d-flex flex-column min-vh-100 cinema-body">

    @* HEADER з меню + кнопками логіну/реєстрації *@
    <header class="cinema-header d-flex justify-content-between align-items-center px-3">
        @* Ліва частина – існуюче меню з компонента *@
        <div class="flex-grow-1">
            @await Component.InvokeAsync("MainLayoutHeader")
        </div>

        @* Права частина – кнопки логіну та реєстрації *@
        <nav class="ms-3">
            @if (User?.Identity == null || !User.Identity.IsAuthenticated)
            {
                <a class="btn btn-outline-light me-2"
                   asp-controller="Auth"
                   asp-action="Login">
                    Login
                </a>
                <a class="btn btn-primary"
                   asp-controller="Auth"
                   asp-action="Register">
                    Register
                </a>
            }
        </nav>
    </header>

    <div class="d-flex flex-grow-1 cinema-layout">
        <nav id="sideNav" class="col-2 cinema-sidebar">
            @* Тимчасово без SideNavigation, щоб не було NullReferenceException *@
            @* Якщо потім полагодиш компонент, можна розкоментувати:
            @if (User?.Identity != null && User.Identity.IsAuthenticated)
            {
                @await Component.InvokeAsync("SideNavigation")
            }
            *@
        </nav>

        <main role="main" class="col-10 flex-grow-1 cinema-main">
            @RenderBody()
        </main>
    </div>

    <footer id="sticky-footer" class="flex-shrink-0 py-2 align-content-center cinema-footer">
        <p class="text-center mb-0">
            Festival tickets apps · CinemaTime
        </p>
    </footer>

    <!-- Image lightbox modal -->
    <div class="modal fade image-modal" id="imageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content bg-transparent border-0">
                <button type="button"
                        class="btn-close btn-close-white ms-auto me-2 mt-2"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
                <img id="imageModalImg" src="" alt="Cinema image" class="img-fluid rounded-4" />
            </div>
        </div>
    </div>

    @* ВАЖЛИВО: секція Scripts, щоб не було InvalidOperationException *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



